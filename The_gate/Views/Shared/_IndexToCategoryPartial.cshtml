@model List<Category>
<table class="table table-bordered table-hover">
	<tr>
		<th>Name_En</th>
		<th>Name_Ar</th>
		<th>Image</th>
		<th>IsActive</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.NameE</td>
			<td>@item.NameA</td>
			<td><img src="@item.Image" alt="no image" style="width:100px" /></td>
			<td>@item.IsActive</td>

			<td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
			<td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>

		</tr>
	}
</table>
<div>
	<a asp-action="Add" class="btn btn-success btn-lg">Add_New_Category</a>
</div>
