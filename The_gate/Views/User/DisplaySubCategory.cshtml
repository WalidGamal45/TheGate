<!-- Banner -->
<div id="categoryBanner" class="carousel slide w-100" style="margin:0;" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/cn_3.webp"
                 class="d-block w-100"
                 alt="Banner 1"
                 style="height:40vh; object-fit:fill;" />
        </div>
        <div class="carousel-item">
            <img src="~/images/Banner3.webp"
                 class="d-block w-100"
                 alt="Banner 2"
                 style="height:40vh; object-fit:fill;" />
        </div>
        <div class="carousel-item">
            <img src="~/images/banner6.webp"
                 class="d-block w-100"
                 alt="Banner 3"
                 style="height:40vh; object-fit:fill;" />
        </div>
    </div>

    <!-- أزرار التحكم -->
    <button class="carousel-control-prev" type="button" data-bs-target="#categoryBanner" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#categoryBanner" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning text-center">@ViewBag.Message</div>
}
else
{
    <div class="row g-3 mt-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-6 col-sm-4 col-md-3 col-lg-2 d-flex justify-content-center">
                <a asp-controller="User"
                   asp-action="DisplayProduct"
                   asp-route-id="@item.Id"
                   class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 text-center p-2" style="background-color:transparent; padding:0;">
                        <!-- صورة دائرية كبيرة -->
                        <img src="@Url.Content(item.Image)"
                             alt="@item.NameE"
                             style="
                                        width:260px;
                                        height:260px;
                                        border-radius:50%;
                                        object-fit:cover;
                                        display:block;
                                        margin:auto;
                                     " />
                        <div class="card-body py-2">
                            <h5 class="card-title fw-bold mt-2">@item.NameE</h5>
                            <p class="card-text text-muted">@item.NameA</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
