@if (ViewBag.Message != null)
{
    <div class="alert alert-warning text-center">@ViewBag.Message</div>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@Url.Content(item.Image)"
                         class="card-img-top"
                         alt="no image"
                         style="height:300px; object-fit:cover;" />
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">SubCategories</h5>
                        <p class="card-text text-muted">@item.NameA</p>
                        <a asp-controller="User"
                           asp-action="DisplayProduct"
                           asp-route-id="@item.Id"
                           class="btn btn-primary btn-load-sub">
                            View Products
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
