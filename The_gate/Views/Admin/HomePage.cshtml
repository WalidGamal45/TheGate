@{
    ViewData["Title"] = "HomePage";
}

<div style="display: flex;">
    <div class="sidebar" style="
        width: 150px;
        background-color: #2c3e50;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
        gap: 20px;
    ">
        <a onclick="loadContent('/Admin/GetallAdmins')" style="color: white; text-decoration: none;">
            <button style="background: none; border: none; color: white; font-size: 18px;">🏠 Admins</button>
        </a>

        <a onclick="loadContent('/Category/Index')" style="color: white; text-decoration: none;">
            <button style="background: none; border: none; color: white; font-size: 18px;">👁️ Categories</button>
        </a>
        <a onclick="loadContent('/SubCategory/Index')" style="color: white; text-decoration: none;">
            <button style="background: none; border: none; color: white; font-size: 18px;">👀 SubCategories</button>
        </a>
    </div>

    <div id="mainContent" style="flex-grow: 1; padding: 20px;">
        <h2>Welcome To My Application</h2>

        <div id="contentBox" style="
            display: none;
            margin-top: 20px;
            border: 3px solid #3498db;
            border-radius: 10px;
            padding: 20px;
            background-color: #ecf0f1;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            min-height: 300px;
        ">
           
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadContent(url) {
            $.ajax({
                url: url,
                success: function (result) {
                    $("#contentBox").html(result).fadeIn();
                },
                error: function () {
                    $("#contentBox").html("<p style='color:red;'>❌ Error loading content.</p>").fadeIn();
                }
            });
        }
    </script>
}
